<h2 class="page-title">Forgot your password?</h2>

<%= form_with(model: resource, scope: resource_name, url: password_path(resource_name), method: :post) do |form| %>

  <div class="d-flex flex-column justify-content-center align-items-center">

    <div class="form-group mb-3 w-50">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      <%= render "layouts/shared/error_messages", { resource: resource, attribute: :email } %>
    </div>

    <div class="mb-3 d-flex align-items-center justify-content-center">
      <%= form.submit "Send me reset password instructions", class:"btn btn-m btn-primary" %>
    </div>

    <%= render "devise/shared/links" %>
  </div>

<% end %>
