<h2 class="page-title"><%= t('users.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
  <div class="d-flex flex-column justify-content-center align-items-center">

    <div class="form-group mb-3 w-50">
      <%= form.label :email, class: "form-label"%>
      <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      <%= render partial: "shared/errors", locals: { resource: resource, attribute: :email } %>
    </div>

    <div class="form-group mb-3 w-50">
      <%= form.label :username, class:"form-label" %>
      <%= form.text_field :username, autocomplete: "username", class:"form-control" %>
      <%= render partial: "shared/errors", locals: { resource: resource, attribute: :username } %>
    </div>

    <div class="form-group mb-3 w-50">
      <%= form.label :password, class:"form-label" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= form.password_field :password, autocomplete: "new-password", class:"form-control" %>
      <%= render partial: "shared/errors", locals: { resource: resource, attribute: :password } %>
    </div>

    <div class="form-group mb-3 w-50">
      <%= form.label :password_confirmation, class:"form-label" %>
      <%= form.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      <%= render partial: "shared/errors", locals: { resource: resource, attribute: :password_confirmation } %>
    </div>

    <div class="mb-3 d-flex align-items-center justify-content-center">
      <%= form.submit "Sign up", class:"btn btn-m btn-primary" %>
    </div>

    <%= render "devise/shared/links" %>
  </div>
<% end %>
