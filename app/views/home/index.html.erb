<div id="stories" class="d-flex flex-column justify-content-center align-items-center">
  <% @stories.each do |story| %>
    <%= link_to story_path(story), class: "text-decoration-none text-reset" do %>
      <div class="m-3">
        <%= render story %>
      </div>
    <% end %>
  <% end %>
</div>
