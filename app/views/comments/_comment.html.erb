<%= turbo_stream_from comment %>
<%= turbo_frame_tag comment do %>
  <div class="card comment <%= 'pinned-comment' if comment.pin %>">
    <div class="card-body d-flex flex-column w-100">
      <h6 class="card-subtitle mb-2 text-muted">
        <span id="<%= dom_id(comment) %>_user_username"><%= t('by_username', username: comment.user.username) %></span>
        <span id="<%= dom_id(comment) %>_created_at"><%= t('at_date', date: comment.created_at) %></span>
      </h6>
      <p id="<%= dom_id(comment) %>_content" class="card-text"><%= comment.content %></p>
      <div class="d-none d-flex justify-content-start align-items-center mt-3 mb-3 hideable-buttons"
        data-turbo-frame-visibility-target="hideableTurboFrame"
        data-username-value="<%= comment.user.username %>"
      >
        <%= link_to t('edit'), edit_comment_path(comment), type: "edit", class: "me-2" %>|
        <%= button_to t('delete'), comment_path(comment),
          method: :delete,
          class: "btn btn-link",
          data: { confirm: t('are_you_sure_delete') }
        %>
      </div>
    </div>
  </div>
<% end %>
