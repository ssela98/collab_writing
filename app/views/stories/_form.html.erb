<%= form_with(model: story) do |form| %>
  <div class="card m-3">
    <div class="card-body d-flex flex-column w-100">
      <div class="form-group mb-3">
        <%= form.label :title, class: "form-label h5" %>
        <%= form.text_area :title, autocomplete: "title", autofocus: @autofocus == 'title', class: "form-control form-control-lg" %>
        <%= render partial: "shared/errors", locals: { resource: story, attribute: :title } %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :content, class: "form-label h6" %>
        <%= form.rich_text_area :content, autocomplete: "content", autofocus: @autofocus == 'content', class: "form-control", rows: 16 %>
        <%= render partial: "shared/errors", locals: { resource: story, attribute: :content } %>
      </div>

      <div class="mb-3 d-flex align-items-center justify-content-center">
        <%= form.submit t('save'), class:"btn btn-m btn-primary m-3" %>
        <%= link_to t('cancel'), story, class: "btn btn-link", data: { turbo_method: :get, turbo_confirm: t('are_you_sure_changes_unsaved') } %>
      </div>
    </div>
  </div>
<% end %>
