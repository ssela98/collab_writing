<%= form_with(model: story) do |form| %>
  <% if story.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
        <% story.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="d-flex flex-column justify-content-center align-items-center">
    <div class="form-group mb-3 w-50">
      <%= form.label :title, class: "form-label"%>
      <%= form.text_field :title, autofocus: true, autocomplete: "title", class: "form-control" %>
    </div>

    <div class="form-group mb-3 w-50">
      <%= form.label :content, class:"form-label" %>
      <%= form.text_area :content, autocomplete: "content", class:"form-control", rows: 8 %>
    </div>

    <div class="mb-3 d-flex align-items-center justify-content-center">
      <%= form.submit "Save", class:"btn btn-lg btn-primary m-3" %>
      <%= button_tag onclick: "return confirm('Are you sure? All changes will be lost.')", class:"btn btn-lg btn-danger m-3" do %>
        <%= hidden_field_tag :cancel, true %>
        <%= link_to "Cancel", request.referer || root_url, class: 'text-decoration-none text-reset' %>
      <% end %>
    </div>
  </div>
<% end %>
