<turbo-frame id="<%= dom_id story %>">
  <div class="card m-3">
    <div class="card-body d-flex flex-column w-100">
      <div class="form-group mb-3">
        <%= link_to edit_story_path(story), class: "card-title text-decoration-none text-reset" do %>
          <%= text_area_tag :title, story.title, { id: "#{ dom_id story }_title", autocomplete: "title", class: "form-control form-control-lg" } %>
        <% end %>
      </div>
      <h6 class="card-subtitle mb-2 text-muted">
        <span id="<%= dom_id story %>_user_username"><%= t('stories.by_username', username: story.user.username) %></span>
        <span id="<%= dom_id story %>_created_at"><%= t('stories.at_date', date: story.created_at) %></span>
      </h6>
      <div class="form-group mb-3">
        <%= link_to edit_story_path(story), class: "card-text text-decoration-none text-reset" do %>
          <%= text_area_tag :content, story.content, { id: "#{ dom_id story }_content", autocomplete: "content", class: "form-control", rows: 16 } %>
        <% end %>
      </div>
    </div>
  </div>
</turbo-frame>
