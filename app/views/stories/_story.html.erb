<turbo-frame id="<%= dom_id story %>" class="story">
  <div class="card">
    <div class="card-body d-flex flex-column w-100">

      <h5 id="<%= dom_id story %>_title" class="card-title"><%= story.title %></h5>
      <h6 class="card-subtitle mb-2 text-muted">
        <span id="<%= dom_id story %>_user_username"><%= t('stories.by_username', username: story.user.username) %></span>
        <span id="<%= dom_id story %>_created_at"><%= t('stories.at_date', date: story.created_at) %></span>
      </h6>
      <p id="<%= dom_id story %>_content" class="card-text"><%= story.content %></p>

      <% if current_user == story.user && !defined?(do_not_render_buttons) %>
        <div class="w-auto d-flex justify-content-center align-items-center">
          <%= link_to "Edit", edit_story_path(story), type: "edit", class: "btn btn-m btn-primary m-3" %>
          <%= link_to "Delete", story_path(story),
            data: { turbo_method: :delete, turbo_confirm: t('are_you_sure_delete')},
            type: "delete",
            class: "btn btn-m btn-danger m-3"
          %>
        </div>
      <% end %>
    </div>
  </div>
</turbo-frame>
