<%= tag.div id: dom_id(pin) do %>
  <div class="d-flex flex-column w-100">
    <%= link_to comment_path(pin.comment_id, story_id: pin.story_id), class: "pin text-decoration-none text-reset mb-2 ps-2", data: local_assigns[:render_html] ? { } : { controller: 'turbo', action: 'click->turbo#getTurboStream' } do %>
      <div class="py-2">
        <span id="<%= dom_id(pin) %>_content"><%= pin.comment.content %></span>
      </div>
    <% end %>
  </div>
<% end %>
